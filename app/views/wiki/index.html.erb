<h1>Wikis</h1>

<h3><%= link_to 'Create a new Wiki', new_wiki_path, class: 'btn btn-success'%></h3><br>

  <%= @wiki.each do |w| %>
    <%= link_to w.title, w %><br>
    <small>
    <%= link_to "Edit", edit_wiki_path(@wiki) %> -
    <%= link_to "Delete", w, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this wiki?'} %><br>
      Submitted <%= time_ago_in_words(w.created_at) %>
      <br><br>
    </small>
  <% end %>
